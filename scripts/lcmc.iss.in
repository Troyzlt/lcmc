[Setup]
AppName=LCMC
AppVersion=@LCMC-VERSION@
AppPublisher="Rasto Levrinc"
AppPublisherURL="http://lcmc.sf.net"
AppSupportURL="http://lcmc.sf.net"
AppUpdatesURL="http://lcmc.sf.net"
DefaultDirName={pf}\LCMC
DefaultGroupName="Linux Cluster MC"
Compression=lzma
UninstallDisplayIcon={app}\LCMC.exe
LicenseFile=../LICENSE.txt

[Files]
Source: "../LCMC.EXE"; DestDir: "{app}"
Source: "../README.txt"; DestDir: "{app}"; Flags: isreadme
Source: "../LICENSE.txt"; DestDir: "{app}"; Flags: ignoreversion

[Icons]
Name: "{group}\LCMC"; Filename: "{app}\LCMC.exe"

[Run]
Filename: {app}\LCMC.exe; Description: {cm:LaunchProgram,LCMC}; Flags: nowait postinstall skipifsilent

[CustomMessages]
LaunchProgram=Start LCMC after finishing installation

