## generated by drbd-gui

global {
		usage-count	yes;
}

common {
	startup {
		wfc-timeout	3;
		degr-wfc-timeout	0;
	}

	net {
		protocol	C;
		cram-hmac-alg	sha1;
		shared-secret	SECRET;
	}

	disk {
		on-io-error	detach;
	}

}

resource r0 {
	handlers {
		fence-peer	"LIBDIR/drbd-peer-outdater -t 5";
	}

	startup {
		wfc-timeout	9;
	}

	net {
		protocol	B;
		max-buffers	5k;
	}

	disk {
		resync-after	r1;
	}

	on host1 {
		volume 0 {
			device		/dev/drbd0;
			disk		DISK;
			flexible-meta-disk	internal;
		}
		address		IP:7788;
	}
	on host2 {
		volume 0 {
			device		/dev/drbd0;
			disk		DISK;
			flexible-meta-disk	internal;
		}
		address		IP:7788;
	}
}
resource r1 {
	on host1 {
		volume 0 {
			device		/dev/drbd1;
			disk		DISK;
			flexible-meta-disk	internal;
		}
		address		IP:7789;
	}
	on host2 {
		volume 0 {
			device		/dev/drbd1;
			disk		DISK;
			flexible-meta-disk	internal;
		}
		address		IP:7789;
	}
}
